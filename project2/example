  <script type="text/javascript">

    var redarray = [
    				"#fcc","#fcc", "#fbb","#fbb", "#faa","#faa", "#f99","#f99",
    				"#f88",	"#f77","#f66", "#f55",  "#f44",  "#f33", "#f22", "#f11"
    				] ;
    var bluearray =[ "#00f", "#11f", "#22f", "#33f", "#44f", "#55f", "#66f", "#77f",
    				"#88f", "#99f", "#aaf", "#bbf", "#ccf", "#ddf", "#eef", "#fff" ] ;
    var purplearray = [  "#fdf", "#fcf", "#fdf", "#fcf", "#fbf", "#fcf", "#fbf", "#faf",
    			"#f9f", "#f8f", "#f7f","#f6f",  "#f5f", "#f4f", "#f3f", "#f2f" ] ;

    var cb_color  = "#ffc" ; //code background
    var cbh_color = "#faa" ; //code background highlight

    var lessthanEnd ;
    var greaterthanEnd ;
    var pivotValue ;
    var step ;

    function permute(n) {
       var i ;
       a = new Array(n) ;
       for ( i=0; i<n; i++ ) a[i] = i ;
       for ( i=n-1; 0<=i; i-- ) {
          var j ;
          j = Math.floor(i*Math.random()) ;
          var k = a[j] ;
          a[j] = a[i] ;
          a[i] = k ;
       }
       return a ;
    }

    function setElementValue(elementId, value) {
    	if ( document.getElementById(elementId).innerText!=undefined ) {
    		document.getElementById(elementId).innerText = value ;
    	} else {
    		document.getElementById(elementId).textContent = value ;
    	}
    }

    function stepZero() {
      a = permute(16);
    	var i ;
    	for ( i=1; i<17;i++ ) {
    		document.getElementById('n'+i).style.background = bluearray[16-i] ;
    		document.getElementById('n'+i).style.color = "black" ;
    		setElementValue('array'+i, a[i-1]) ;
    	}
    	lessthanEnd = -1 ;
    	greaterthanEnd = -1 ;
    	pivotValue = a[15] ;
    	step = 'greater than' ;

    	document.getElementById("codeloc0").style.background = cb_color ;
    	document.getElementById("codeloc1").style.background = cb_color ;
    	document.getElementById("codeloc2").style.background = cb_color ;
    	document.getElementById("codeloc3").style.background = cb_color ;

    	setCodeColors(0) ;
    }

    function setCellColor(cell, color) {
    	document.getElementById('n'+cell).style.background = color ;
    }

    function redrawArray() {
    	// for 1 up to i, if non-empty, use red
    	// for 1 up to j, if non-empty, use green (grey?) ;
    	var i ;
    	for ( i=0; i<=lessthanEnd; i++ ) {
    		setCellColor(i+1,redarray[16-(i+1)]) ;
    	}
    	for ( i=(lessthanEnd+1); i<=greaterthanEnd; i++ ) {
    		setCellColor(i+1,purplearray[16-(i-lessthanEnd+1)]) ;
    	}
    	for ( i=1; i<17; i++ ) {
    	    setElementValue('array'+i, a[i-1]) ;
    	}
    }

    function algStep() {
    	switch (step) {
    	case 'greater than':
    		greaterthanEnd++ ;
    		if ( greaterthanEnd==15 ) {
    			step = 'swap pivot' ;
    			break ;
    		}
    		redrawArray() ;
    		setCodeColors(1) ;
    		step = 'less than' ;
    		break ;
    	case 'less than':
    		if ( a[greaterthanEnd]<pivotValue ) {
    			lessthanEnd++ ;
    			var t = a[greaterthanEnd] ;
    			a[greaterthanEnd] = a[lessthanEnd] ;
    			a[lessthanEnd] = t ;
    		}
    		redrawArray() ;
    		setCodeColors(2) ;
    		step = 'greater than' ;
    		break ;
    	case 'swap pivot':
    		lessthanEnd++ ;
    		var t = a[15] ;
    		a[15] = a[lessthanEnd] ;
    		a[lessthanEnd] = t ;
    		redrawArray() ;
    		setCodeColors(3) ;
    		setCellColor(lessthanEnd+1,bluearray[1]) ;
    		step = 'end' ;
    		break ;
    	case 'end':
    		break ;
    	}
    }

    function setCodeColors(i) {
        document.getElementById("codeloc0").style.background = cb_color ;
      	document.getElementById("codeloc1").style.background = cb_color ;
      	document.getElementById("codeloc2").style.background = cb_color ;
      	document.getElementById("codeloc3").style.background = cb_color ;
        document.getElementById("codeloc"+i).style.background = cbh_color ;
    }

  </script>

  </head>
  <body onload="stepZero();">
